# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===========================================
# ZOHO CONFIGURATION
# ===========================================
ZOHO_CLIENT_ID=your_zoho_client_id_here
ZOHO_CLIENT_SECRET=your_zoho_client_secret_here
ZOHO_REDIRECT_URI=http://localhost:8000/callback
ZOHO_ACCOUNTS_URL=https://accounts.zoho.com
ZOHO_API_URL=https://www.zohoapis.com
ZOHO_CRM_API_URL=https://www.zohoapis.com/crm/v2
CRM_MODULE=Contacts

# ===========================================
# OPENAI CONFIGURATION
# ===========================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
DEFAULT_LLM_PROVIDER=openai

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL Configuration
POSTGRES_URL=postgresql://consultant_user:password123@localhost:5432/consultant_db

# Weaviate Configuration
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
FLASK_SECRET_KEY=your_secret_key_here

# ===========================================
# OPTIONAL CONFIGURATIONS
# ===========================================
# Google AI (if using Google Gemini)
GOOGLE_API_KEY=your_google_api_key_here

# Ollama (if using local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b

# OpenRouter (if using OpenRouter)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=meta-llama/llama-3.1-8b-instruct:free
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
