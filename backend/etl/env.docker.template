# Environment Variables for Docker PostgreSQL Setup
# Copy this file to .env and adjust values as needed

# ===========================================
# POSTGRESQL CONFIGURATION
# ===========================================
POSTGRES_DB=consultant_db
POSTGRES_USER=consultant_user
POSTGRES_PASSWORD=consultant_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ===========================================
# DATABASE CONNECTION URL
# ===========================================
# Use this URL in your Python applications
POSTGRES_URL=postgresql://consultant_user:consultant_password@localhost:5432/consultant_db

# ===========================================
# PGADMIN CONFIGURATION (Optional)
# ===========================================
PGADMIN_DEFAULT_EMAIL=admin@consultant.com
PGADMIN_DEFAULT_PASSWORD=admin123

# ===========================================
# OPENAI CONFIGURATION (Required for embeddings)
# ===========================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# ===========================================
# ZOHO CONFIGURATION (Required for ETL)
# ===========================================
ZOHO_CLIENT_ID=your_zoho_client_id
ZOHO_CLIENT_SECRET=your_zoho_client_secret
ZOHO_REDIRECT_URI=http://localhost:8000/callback
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token
ZOHO_ACCOUNTS_URL=https://accounts.zoho.com
ZOHO_CRM_API_URL=https://www.zohoapis.com/crm/v2

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
FLASK_SECRET_KEY=your_secret_key_here
DEBUG=True
ENVIRONMENT=development
